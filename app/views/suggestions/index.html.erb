<div class="m-5">
</div>

<div class="d-flex justify-content-between align-items-center m-3">
  <div class="avatar-navbar">
    <%= render 'shared/avatar_navbar' %>
  </div>
  <h2 class="font-weight-bold">Discover</h2>
</div>

<ul class="nav justify-content-between p-3">
  <li class="nav-item font-weight-bold text-hidden"><%= link_to 'Collection', user_vinyls_path, style:"color:#c2c2c2;" %></li>
  <li class="nav-item font-weight-bold ">Suggestions</li>
  <li class="nav-item font-weight-bold text-hidden"><%= link_to 'Wishlist', favorites_path, style:"color:#c2c2c2;" %></li>
</ul>


<div class="card-vinyl">
  <div class="mx-3 mb-3 content-search">

  <% if @vinyls %>
    <% @vinyls.each_with_index do |vinyl, index| %>
      <div class="card-search  py-4 d-flex">
        <%= link_to vinyl_path(vinyl) do %>
          <div class="container-img ">
            <img class="photo-sizing position-relative" src="<%= vinyl.cover_url %>">
          </div>

          <div class="container-infos w-50 px-3 py-2 d-flex flex-column justify-content-between">
            <div>
              <h6 class="card-text title-sizing text-white"><%= vinyl.title %></h6>
              <p class="card-text text-sizing text-white"><%= vinyl.artist.name %></p>
            </div>
            <p class="card-text genre-color"><small><i class="fas fa-music"></i> <%= vinyl.genre.name %></small></p>
          </div>
          <div class="h-75 p-3 link-card justify-content-between align-items-center d-flex flex-column">
            <div>
              <%= link_to icon('fas', 'plus'), vinyl_user_vinyls_path(vinyl), method: :post %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>

<div class="d-flex w-100 fixed-bottom p-3">
  <% img = image_tag 'back-arrow.svg' %>
  <%= link_to img, authenticated_root_path %>
</div>
