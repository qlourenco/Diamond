<div class="m-5">
</div>

<div class="d-flex justify-content-between align-items-center m-3">
  <div class="avatar-navbar">
    <%= render 'shared/avatar_navbar' %>
  </div>
  <h2 class="font-weight-bold">My Wish-list</h2>
</div>

<ul class="nav justify-content-between p-3">
  <li class="nav-item font-weight-bold text-hidden"><%= link_to 'Collection', user_vinyls_path, style:"color:#9B9B9B;" %></li>
  <li class="nav-item font-weight-bold text-hidden"><%= link_to 'Suggestions', suggestions_path, style:"color:#9B9B9B;" %></li>
  <li class="nav-item font-weight-bold">Wish-list</li>
</ul>


<div class="card-vinyl mt-5">
  <div class="search-bar">
    <%= render 'shared/search_bar' %>
  </div>

  <div class="m-4">
    <% @favorites.reverse_each do |favorite| %>
      <div class="row">
        <div class="d-flex mb-3 g-0">
          <%= link_to favorite_path(favorite) do %>
          <div class="col-4 d-flex align-items-center">
              <img class="photo-sizing" src="<%= favorite.vinyl.cover_url %>">
          </div>
          <div class="col-8 px-0">
              <div class="card-body pl-0">
                <h6 class="my-h6 card-text title-sizing text-white"><%= favorite.vinyl.title %></h6>
                <%= image_tag 'fav-diamond.svg', style:"height:20px;" %>
                <p class="card-text text-sizing text-white"><%= favorite.vinyl.artist.name %></p>
                <div class="d-flex justify-content-between">
                  <p class="card-text genre-color"><small><%= favorite.vinyl.genre.name %></small></p>
                  <%= link_to icon('fas', 'trash-alt'), favorite_path(favorite), method: :delete, data: { confirm: "Are you sure?" }, class:"my-trash text-white" %>
                </div>
              </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

</div>
