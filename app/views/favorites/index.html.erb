<div class="m-5">
</div>

<div class="d-flex justify-content-between align-items-center m-3">
  <h2 class="font-weight-bold">My wishlist</h2>
  <%= image_tag "http://placehold.it/40x40", class: "rounded-circle"%>
</div>

<ul class="nav justify-content-between p-3">
  <li class="nav-item font-weight-bold text-hidden">Collection</li>
  <li class="nav-item font-weight-bold text-hidden">Suggestions</li>
  <li class="nav-item font-weight-bold">Wish-list</li>
</ul>

<div class="music-kind-view">
</div>

<div class="card-vinyl">
  <div class="search-bar">
    <%= render 'shared/search_bar' %>
  </div>

  <div class="m-4">
    <% @favorites.each do |favorite| %>
      <div class="row mb-3 g-0">
        <div class="col-4 d-flex align-items-center">
          <img class="photo-sizing" src="<%= favorite.vinyl.cover_url %>">
        </div>
        <div class="col-8 pr-0">
          <div class="card-body">
            <h6 class="card-text title-sizing text-white"><%= favorite.vinyl.title %></h6>
            <p class="card-text text-sizing text-white"><%= favorite.vinyl.artist.name %></p>
            <div class="d-flex justify-content-between">
              <p class="card-text genre-color"><small><%= favorite.vinyl.genre.name %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
