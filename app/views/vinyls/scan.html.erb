<h1 id="scan-title" class="font-weight-bold">Scan it ! <lottie-player src="https://assets3.lottiefiles.com/packages/lf20_m5evszda.json"  background="transparent"  speed="1"  style="height: 100px;"  loop  autoplay></lottie-player></h1>

<div id='barcode-scanner'></div>
<%= form_tag vinyls_path, method: "GET", id:"form-barcode", class:"home-form w-100 d-flex justify-content-center" do %>
  <%= hidden_field_tag :query,
      params[:query],
      required: false,
      id: :barcode,
      class: "form-control home-input"
  %>
  <%=  submit_tag "Search",id: "scan-btn-search", class:"btn-mid-gold btn-search-home"%>
<% end %>

<div id="scan-footer"></div>

<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
