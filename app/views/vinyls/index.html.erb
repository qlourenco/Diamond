<%= render 'shared/header_search' %>

<div class="card-vinyl">
  <div class="search-bar">
    <%= form_tag vinyls_path, method: "GET", class:"home-form-search w-100 d-flex justify-content-center" do %>
      <%= text_field_tag :query,
          params[:query],
          required: false,
          class: "form-control home-input",
          placeholder: "Find your Album Vinyl"
      %>
    <%=  submit_tag "Search", class:"btn-mid-gold btn-search-home"%>
    <% end %>
  </div>

  <div class="m-3 content-search">
    <% @vinyls.each_with_index do |vinyl, index| %>
      <div class="card-search  py-4 d-flex">
        <%= link_to vinyl_path(vinyl) do %>
          <div class="container-img ">
            <img class="photo-sizing position-relative" src="<%= vinyl.cover_url %>">
            <% if @already_in_collecs[index] %>
              <%= render 'shared/bookmark-green' %>
            <% else %>
              <%= render 'shared/bookmark-red' %>
            <% end %>
          </div>
          <div class="container-infos w-50 px-3 py-2 d-flex flex-column justify-content-between">
            <div>
              <h6 class="card-text title-sizing text-white"><%= vinyl.title %></h6>
              <p class="card-text text-sizing text-white"><%= vinyl.artist.name %></p>
            </div>
            <p class="card-text genre-color"><small><i class="fas fa-music"></i> <%= vinyl.genre.name %></small></p>
          </div>
          <div class="h-75 p-3 link-card justify-content-between align-items-center d-flex flex-column">
            <div>
              <% if @already_in_collecs[index] %>
              <% else %>
                <%= link_to icon('fas', 'plus'), vinyl_user_vinyls_path(vinyl), method: :post %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
