<div class="my-divise-background">
  <%= image_tag("diamon-v1web.png", width:"194") %>
  <div class="my-devise-form d-flex flex-column justify-content-center my-5">
    <%# LOGGIN %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: false,
                    placeholder: "mail",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-input" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: "password",
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"btn btn-primary btn-mid-gold w-50" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <h2 class="my-5 home-title">Log-in with :</h2>
    <button>GOOGLE</button>
    <button>FACEBOOK</button>

    <%= render "shared/back-arrow"%>
  </div>
</div>
