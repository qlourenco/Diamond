<div class="my-divise-background">
  <%= image_tag("diamon-v1web", width:"194") %>
  <div class="my-devise-form d-flex flex-column justify-content-center my-5">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: false,
                    placeholder: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-input" } %>
        <%= f.input :password_confirmation,
                    label: false,
                    placeholder: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", class:"btn btn-primary btn-mid-gold w-50" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<%= render 'shared/back-arrow-devise' %>
