<div class="my-divise-background">
  <%= image_tag("diamon-v1web", width:"194") %>
  <div class="my-devise-form d-flex flex-column justify-content-center my-5">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                label: false,
                placeholder: "email",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-input" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class:"btn btn-primary btn-mid-gold w-50" %>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
<%= render 'shared/back-arrow-devise' %>
